{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["vite/client", "node"]
	},
	"include": ["src/**/*", "vite.config.ts"]
}
